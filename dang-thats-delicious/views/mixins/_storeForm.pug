mixin storeForm(store = {})
  form.card(action="/add" method="POST")
    label(for="name") Name
    input(type="text", name="name")

    label(for="description") Description
    textarea(name="description")

    - const tagChoices = ['Wi-Fi', 'Open Late', 'Family Friendly', 'Vegetarian', 'Licensed']
    ul.tags
      each choice in tagChoices
        li.tag.tag__choice
          input(type="checkbox" id=choice value=choice name="tags")
          label(for=choice)= choice

    button(type="submit" class="button") Save &rarr;
